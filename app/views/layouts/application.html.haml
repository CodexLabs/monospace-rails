!!!
%html
  %head
    %title= Monospace
    = stylesheet_link_tag :all
    = javascript_include_tag "https://js.stripe.com/v1/"
    = javascript_tag "Stripe.publishableKey = '#{STRIPE_PUBLISHABLE_KEY}';";
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body
    #header
      #title
        %h1= link_to "Monospace", root_path
        %ul#navigation
          - if current_user
            %li= link_to "Edit Profile", edit_profile_path
            %li= link_to "Sign Out", sign_out_path
          - else
            %li= link_to "Sign In", sign_in_path
            %li= link_to "Register", register_path
    #content
      - if flash.notice
        #notice= flash.notice
      = yield
